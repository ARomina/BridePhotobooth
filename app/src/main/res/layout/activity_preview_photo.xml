<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/mPreviewPhoto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mButtonCancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
    android:id="@+id/mButtonCancel"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="Cancel"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@+id/mButtonContinue"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/mButtonContinue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        app:layout_constraintLeft_toRightOf="@+id/mButtonCancel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

</android.support.constraint.ConstraintLayout>